\pard\plain \s25\fi0\li170\qj\hyphpar1\sb75\sa0 \f4\fs24\cf19 {\*\bkmkstart sub_843}\fs16\cf1 \chshdng0\chcfpat0\chcbpat20 ГАРАНТ:\par\pard
